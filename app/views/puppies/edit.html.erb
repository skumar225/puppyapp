<h1>Edit this puppy. Make a cuter puppy!</h1>

<% if @puppy.errors.any? %>
<% @puppy.errors.full_messages.each do |error|%>
<p class="text-danger">
  <%= error%>
</p>
<% end %>
<% end %> 

<%= form_for @puppy, url: "/puppies" do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </p>

    <p>
    <%= f.label :breed %>
    <%= f.text_field :breed %>
  </p>
  
    <%= f.submit %>

<% end %>

<%= link_to "Delete", "/puppies/#{{@puppy.id}}" method: "Delete%>